type Category {
    id: ID!,
    name: String!,
    description: String
}

type Query {
    categories(page: Int, size: Int, sortBy: String, isAsc: Boolean, search: String): [Category]
    category(id: ID): Category
}

input CategoryInput {
    name: String!,
    description: String
}

type Mutation {
    create(input: CategoryInput): Category
}
