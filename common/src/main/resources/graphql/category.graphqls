type Category {
    id: String!,
    name: String!,
    description: String
}

type Query {
    categories(page: Int, size: Int, sortBy: String, isAsc: Boolean, search: String): [Category]
    category(id: String!): Category
}

input CategoryInput {
    name: String!,
    description: String
}

type Mutation {
    createCategory(input: CategoryInput): Category
    deleteCategory(id: String!): Category
}
